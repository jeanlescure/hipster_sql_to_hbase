grammar DropTable
  include SQLPrimitives
  include SQLRowSupport

  rule drop_table
    "DROP" (temporary)? SPACES "TABLE" SPACES
    table_name
    (restrict / cascade)? {
      def query_type
        :drop_table
      end
      def tree
        {
          :table => table_name.eval
        }
      end
    }
  end

  rule temporary
    SPACES "TEMPORARY"
  end

  rule restrict
    SPACES "RESTRICT"
  end

  rule cascade
    SPACES "CASCADE"
  end
end
